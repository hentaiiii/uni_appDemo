<view class="cartContainer"><view class="title">购物车</view><view class="cartList"><block wx:for="{{cartList}}" wx:for-item="shopItem" wx:for-index="index" wx:key="id"><view class="cartItem"><text data-event-opts="{{[['tap',[['changeSelected',[!shopItem.selected,index]]]]]}}" class="{{['iconfont','icon-xuanzhong',(shopItem.selected)?'selected':'']}}" bindtap="__e"></text><view class="shopItem"><image class="shopImg" src="{{shopItem.listPicUrl}}" mode></image><view class="shopInfo"><text>{{shopItem.name}}</text><text class="price">{{"￥"+shopItem.retailPrice}}</text></view></view><view class="countCtrl"><text data-event-opts="{{[['tap',[['changeCount',[true,index]]]]]}}" class="add" bindtap="__e">+</text><text class="count">{{''+shopItem.count+''}}</text><text data-event-opts="{{[['tap',[['changeCount',[false,index]]]]]}}" class="del" bindtap="__e">-</text></view></view></block></view><view class="cartFooter"><text data-event-opts="{{[['tap',[['selectAllOrNot',[!isAllSelected]]]]]}}" class="{{['iconfont','icon-xuanzhong',(isAllSelected)?'selected':'']}}" bindtap="__e"></text><text class="allSelected">{{"已选 "+totalCount}}</text><view class="right"><text class="totalPrice">{{"合计: ￥"+totalPrice}}</text><text class="preOrder">下单</text></view></view></view>