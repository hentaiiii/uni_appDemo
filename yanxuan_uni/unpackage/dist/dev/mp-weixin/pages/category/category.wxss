.header {
  padding: 10rpx 0;
  border-bottom: 1px solid #eee;
}
.header .search {
  width: 92%;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 26rpx;
  text-align: center;
  background-color: #eee;
  margin: 0 auto;
  border-radius: 10rpx;
}
.categoryContent {
  display: flex;
  height: 800rpx;
}
.categoryContent .categoryLeft {
  box-sizing: border-box;
  width: 20%;
}
.categoryContent .categoryLeft .scrollContainer {
  height: calc(100vh - 82rpx);
}
.categoryContent .categoryLeft .scrollContainer .scrollItem {
  position: relative;
  text-align: center;
  font-size: 26rpx;
  height: 80rpx;
  line-height: 80rpx;
}
.categoryContent .categoryLeft .scrollContainer .scrollItem.active::before {
  position: absolute;
  content: "";
  width: 2rpx;
  height: 40rpx;
  background-color: #bb2c08;
  top: 20rpx;
  left: 10rpx;
}
.categoryContent .categoryRight {
  box-sizing: border-box;
  width: 80%;
}
.categoryContent .categoryRight .bigImg {
  display: block;
  margin: 10rpx auto;
  width: 520rpx;
  height: 190rpx;
}
.categoryContent .categoryRight .cateContent {
  display: flex;
  flex-wrap: wrap;
}
.categoryContent .categoryRight .cateContent .cateItem {
  width: 33.333%;
  text-align: center;
}
.categoryContent .categoryRight .cateContent .cateItem image {
  width: 90%;
  height: 144rpx;
}
.categoryContent .categoryRight .cateContent .cateItem text {
  font-size: 24rpx;
}

