.swiper {
  width: 100%;
  height: 375rpx;
}
.swiper image {
  width: 100%;
  height: 375rpx;
}
.policyDescList {
  display: flex;
}
.policyDescList .policyItem {
  flex: 1;
  text-align: center;
}
.policyDescList .policyItem image {
  width: 32rpx;
  height: 32rpx;
}
.policyDescList .policyItem text {
  font-size: 24rpx;
}
.kingKongList {
  display: flex;
  flex-wrap: wrap;
  margin-bottom: 20rpx;
}
.kingKongList .kingKongListItem {
  display: flex;
  flex-direction: column;
  width: 20%;
  text-align: center;
}
.kingKongList .kingKongListItem image {
  width: 110rpx;
  height: 110rpx;
  margin: 10rpx auto;
}
.kingKongList .kingKongListItem text {
  font-size: 26rpx;
}

